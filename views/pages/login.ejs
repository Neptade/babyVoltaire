/*--------------------------------------------------------------------- skeleton ---------------------------------------------------------------------*/

:root{
     --blue1:rgb(135,206,235);
     --blue2 : rgb(6,119,144);
     --yellow: rgb(255,215,0);
     --grey :rgb(176,196,222);
 }

* {
     box-sizing: border-box !important;
     transition: ease all 0.5s;
}

html {
     scroll-behavior: smooth;
}

body {
     color: #666666;
     font-size: 14px;
     font-family: Poppins;
     line-height: 1.80857;
     font-weight: normal;
