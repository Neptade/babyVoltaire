        <div class="container">
            <form action="/exercices/tps_exo" method="GET">
                <label for="classe">Quelle est votre class ?</label>
                <select id="classe" onchange="updateTPS()">
                <option value="">Niveau</option>
                <option value="cp">CP</option>
                <option value="ce1">CE1</option>
                <option value="ce2">CE2</option>
                <option value="cm1">CM1</option>
                <option value="cm2">CM2</option>
                </select>

                <label for="temps">Sur quel temps voulez-vous vous exercer ?</label>
                <select id="temps" name="temps">
                <option value="">-- Temps --</option>
                </select>
                <button type="submit" value = "SEND">Commencer les exercices !</button>
            </form>          
            <script>
                function updateTPS() {
                var firstSelect = document.getElementById("classe");
                var secondSelect = document.getElementById("temps");

                // Clear existing options
                secondSelect.innerHTML = "";

                // Get the selected value from the first select menu
                var selectedValue = classe.value;

                // Determine the options for the second select menu based on the selected value
                if (selectedValue === "cp") {
                    addOption(secondSelect, "Présent", "Présent Simple");
                } else if (selectedValue === "ce1") {
                    addOption(secondSelect, "Présent", "Présent Simple");
                    addOption(secondSelect, "Futur", "Futur Simple");
                } else if (selectedValue === "ce2") {
                    addOption(secondSelect, "Imparfait", "Imparfait");
                    addOption(secondSelect, "Présent", "Présent Simple");
                    addOption(secondSelect, "Futur", "Futur Simple");
                } else if (selectedValue === "cm1") {
                    addOption(secondSelect, "Passé Composé", "Passé composé");
                    addOption(secondSelect, "Imparfait", "Imparfait");
                    addOption(secondSelect, "Présent", "Présent Simple");
                    addOption(secondSelect, "Futur", "Futur Simple");
                } else if (selectedValue === "cm2") {
                    addOption(secondSelect, "Passé Simple", "Passé simple");
                    addOption(secondSelect, "Passé Composé", "Passé composé");
                    addOption(secondSelect, "Imparfait", "Imparfait");
                    addOption(secondSelect, "Plus-Que-Parfait", "Plus-que-Parfait");
                    addOption(secondSelect, "Présent", "Présent Simple");
                    addOption(secondSelect, "Futur", "Futur Simple");
                }
                }

                function addOption(selectElement, value, text) {
                var option = document.createElement("option");
                option.value = value;
                option.text = text;
                selectElement.appendChild(option);
                }
            </script>
