<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: rgb(255,215,0);">
      <a class="logo" href="#"><img src="/images/logo.png" alt="" width="70" height="50" class="d-inline-block align-text-top"></a>

      <!--Sert juste à cacher le bouton -->
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>


      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
              <li class="nav-item">
                 <a class="nav-link" href="/home/">ACCUEIL</a>
              </li>
              <li class="nav-item">
                 <a class="nav-link" href="#">MON COMPTE</a>
              </li>
              <li class="nav-item">
                 <a class="nav-link" href="/exercices/">LISTE D'EXERCICES</a>
              </li>
              <li class="nav-item">
                 <a class="nav-link" href="/exercices/lecons">MES LEÇONS</a>
              </li>
          </ul>
      </div>
      <div><a><% if (isAuthenticated) { %>
        <li class="nav-item">
          <a class="nav-link font-weight-bold" style="color: rgb(6,119,144);" href="/auth/Logout">DECONNEXION</a>
        </li>
      <% } else { %>
        <li class="nav-item">
          <a class="nav-link font-weight-bold" style="color: rgb(6,119,144);" href="/auth">CONNEXION</a>
        </li>
      <% } %></a></div>
    </nav>
  </header>

  <main>
    <div class="bg-image pt-5" 
        style="background-image: url('https://st3.depositphotos.com/3894705/17563/i/600/depositphotos_175633760-stock-photo-seamles-paper-template-with-dots.jpg')
        ;height: 100vh">
        <div class="container">
            <h1 style='color: rgb(6,119,144);' class="text-center">Exercices</h1><br>                
            <table class="table table-bordered">
                <tr class="table_question" style="background-color:rgb(255,215,0)">
                    <th colspan="4" style='color: rgb(6,119,144);'>Ennoncé</th>
                </tr>
                <tr class="table_question">
                    <td colspan="4" class="text-center"><%= exercices[0].ennonce%></td>
                </tr>
            </table>
            <table class="table">   
                <tr>
                    <th colspan="4" class="table_réponse" style="border:none; color: rgb(6,119,144);">Une seule réponse est vraie, choisisez la puis valider :</th>
                </tr>
                <tr>
                    <form action="/exercices/verification/answer" method="POST">
                        <input type="hidden" name="exerciceId" value="<%=exercices[0].qID%>">
                        <div class="row">
                            <% 
                            // Shuffle the exercices array so that the first answer won't always be the right one
                            function shuffle(array) {
                                for (let i = array.length - 1; i > 0; i--) {
                                const j = Math.floor(Math.random() * (i + 1));
                                [array[i], array[j]] = [array[j], array[i]];
                                }
                            }
                            shuffle(exercices);
                            
                            for (var exo of exercices) { 
                            %>
                            <td style="border:none">
                                <div class="col">
                                    <input type="checkbox"  class="col-sm-3" id="answer" name="answer" value="<%= exo.reponse%>" onclick="onlyOne(this)"/>
                                    <label class="radio-inline">Réponse : <%= exo.reponse %></label><br>
                                </div>
                            </td>
                            <% } %>
                            <td style="border:none">
                                <div class="col">
                                    <button type="submit" value ="SEND" class="form-control col-md-6 btn_exo">Valider</button>
                                </div>
                            </td>
                        </div>
                    </form>
                </tr>
            </table> 

            <script>
                function onlyOne(checkbox) {
                    var checkboxes = document.getElementsByName('answer')
                    checkboxes.forEach((item) => {
                        if (item !== checkbox) item.checked = false
                    })
                }
            </script>
      </div>
    </div>
  </main>

  <footer class="text-white py-3 test_color fixed-bottom">
        <a href="#" style="color: rgb(255,215,0);" class="text-decoration-none centered-link">Back to top</a>
  </footer>

</body>
